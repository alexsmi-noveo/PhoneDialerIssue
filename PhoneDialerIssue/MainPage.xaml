<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneDialerIssue.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                x:Name="phoneDialer"
                Text="Open phone dialer"
                Clicked="phoneDialer_Clicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="emailOpener"
                Text="Open email picker"
                Clicked="emailOpener_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

